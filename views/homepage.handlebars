 <h1>
     The Tech Blog
</h1>
{{#each blogs as |blog| }}

  <div class ="row mb-4 blog_posts">
    <a onClick= displayComment({{blog.id}})> 
    <div class="col-12">
    <h5 id="blogTitle" >{{blog.title}} 

    <span class="date" style="font-size:13px;display:flex;justify-content:flex-end"> Posted by {{blog.creator}} on {{format_date date_created}} </span>
    </h5>
    </div>
    </a>
  </div>
  <div>
    <p> {{blog.content}} </p>
  
  </div>
<div id= {{blog.id}} style="display: none">  
      <form class="form add-form">
          <div class="form-group">
        <label for="post-content">Comment</label><br>
        <textarea class="form-input" type="text" id="content" rows="5" cols="33"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
</div>

{{/each}}



<script>

    const displayComment = (id) =>{
     if (  document.getElementById(id).style.display == "block") {
       document.getElementById(id).style.display = "none";

     } else {
        document.getElementById(id).style.display = "block";

     }
    }
</script>

