 <h1>
     The Tech Blog
</h1>
{{#each blogs as |blog| }}

  <div class ="row mb-4 blog_posts">
 
    <div class="col-md-7">
    <h3 id="blogTitle" onClick= displayComment({{blog.id}})>{{blog.title}}</h3> 
      </div>

   <div class="col-md-5">  
    <span class="date"> Posted by {{blog.creator}} on {{format_date date_created}} </span>
    </div>

  </div>
  <div>
    <p> {{blog.content}} </p>
  
  </div>
<div id= {{blog.id}} style="display: none">  
      <form class="form add-form">
      <div class="form-group">
        <label for="input">Comment</label>
        <input class="form-input" type="text" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Submit</button>
      </div>
    </form>
</div>

{{/each}}



<script>

    const displayComment = (id) =>{
     if (  document.getElementById(id).style.display == "block") {
       document.getElementById(id).style.display = "none";

     } else {
        document.getElementById(id).style.display = "block";

     }
    }
</script>