  <section class="card">
    <h2 class="page-title">Create New Post</h2>
    <form class="form add-form">
      <div class="form-group">
        <label for="post-title">Title</label>
        <input class="form-input" type="text" id="title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content</label></div><br>
        <textarea class="form-input" type="text" id="content" rows="5" cols="33"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Create</button>
      </div>
    </form>

  </section>
   {{#if blogs.length}} 
    <div class="row mb-2 blogs-list"></div>
{{#each blogs as |blog|}}
   
      <div class="col-md-8">
        <h4><a href="/dashboard/{{blog.id}}">{{blog.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    
{{/each}}
   </div>
{{/if}}
  <script src="./js/newpost.js"></script>